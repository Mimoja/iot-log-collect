{
  "annotations": { "list": [] },
  "description": "Single-device view: errors, memory usage, and full log stream.",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 100 }] }
        }
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "id": 1,
      "options": { "colorMode": "value", "graphMode": "area", "reduceOptions": { "calcs": ["sum"], "values": false }, "textMode": "auto" },
      "title": "Error Count",
      "type": "stat",
      "targets": [{
        "datasource": { "type": "loki", "uid": "loki" },
        "expr": "sum(count_over_time({job=\"edge\", device_host=~\"$device\", severity=~\"emerg|alert|crit|err\"} [$__range]))",
        "instant": true,
        "refId": "A"
      }]
    },
    {
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "axisLabel": "Errors", "drawStyle": "bars", "fillOpacity": 80, "stacking": { "mode": "normal" } }
        }
      },
      "gridPos": { "h": 6, "w": 18, "x": 6, "y": 0 },
      "id": 2,
      "options": { "legend": { "displayMode": "list", "placement": "right" }, "tooltip": { "mode": "multi", "sort": "desc" } },
      "title": "Errors Over Time",
      "type": "timeseries",
      "targets": [{
        "datasource": { "type": "loki", "uid": "loki" },
        "expr": "sum by (service_name) (count_over_time({job=\"edge\", device_host=~\"$device\", severity=~\"emerg|alert|crit|err\"} [$__auto]))",
        "legendFormat": "{{service_name}}",
        "refId": "A"
      }]
    },
    {
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 6 },
      "id": 3,
      "options": { "dedupStrategy": "none", "enableLogDetails": true, "showLabels": false, "showTime": true, "sortOrder": "Descending", "wrapLogMessage": true },
      "title": "Error Logs",
      "type": "logs",
      "targets": [{
        "datasource": { "type": "loki", "uid": "loki" },
        "expr": "{job=\"edge\", device_host=~\"$device\", severity=~\"emerg|alert|crit|err\"} | json | line_format \"[{{.service_name}}] {{.message}}\"",
        "refId": "A"
      }]
    },
    {
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 20, "lineWidth": 2, "spanNulls": true },
          "unit": "decbytes"
        }
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "id": 4,
      "options": { "legend": { "calcs": ["mean", "lastNotNull"], "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi", "sort": "desc" } },
      "title": "Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "node_memory_MemTotal_bytes{service_name=\"edge\", host_name=~\"$device\"} - node_memory_MemAvailable_bytes{service_name=\"edge\", host_name=~\"$device\"}",
          "legendFormat": "used",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "node_memory_MemAvailable_bytes{service_name=\"edge\", host_name=~\"$device\"}",
          "legendFormat": "available",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "node_memory_MemTotal_bytes{service_name=\"edge\", host_name=~\"$device\"}",
          "legendFormat": "total",
          "refId": "C"
        }
      ]
    },
    {
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 14, "w": 24, "x": 0, "y": 24 },
      "id": 5,
      "options": { "dedupStrategy": "none", "enableLogDetails": true, "showLabels": false, "showTime": true, "sortOrder": "Descending", "wrapLogMessage": true },
      "title": "All Logs",
      "type": "logs",
      "targets": [{
        "datasource": { "type": "loki", "uid": "loki" },
        "expr": "{job=\"edge\", device_host=~\"$device\"} | json | line_format \"[{{.service_name}}] {{.message}}\"",
        "refId": "A"
      }]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["edge", "device", "iot"],
  "templating": {
    "list": [
      {
        "datasource": { "type": "loki", "uid": "loki" },
        "definition": "label_values({job=\"edge\"}, device_host)",
        "includeAll": false,
        "multi": false,
        "name": "device",
        "label": "Device",
        "query": "label_values({job=\"edge\"}, device_host)",
        "refresh": 2,
        "sort": 1,
        "type": "query"
      }
    ]
  },
  "time": { "from": "now-24h", "to": "now" },
  "timepicker": {},
  "timezone": "",
  "title": "Edge Device",
  "uid": "edge-device",
  "version": 1
}
