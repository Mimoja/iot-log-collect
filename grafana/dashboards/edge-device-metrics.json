{
  "annotations": { "list": [] },
  "description": "Edge device hardware metrics (CPU, memory, disk, network, thermal) collected via Fluent Bit node_exporter_metrics, sent over OTLP, and stored in Mimir.",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    { "icon": "dashboard", "includeVars": true, "keepTime": true, "title": "Fleet Overview", "type": "link", "url": "/d/fleet-overview/fleet-overview" }
  ],
  "panels": [
    {
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "axisLabel": "% used", "drawStyle": "line", "fillOpacity": 20, "lineWidth": 2, "spanNulls": true },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "options": { "legend": { "calcs": ["mean", "lastNotNull"], "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi", "sort": "desc" } },
      "title": "CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "100 - (avg by (host_name) (rate(node_cpu_seconds_total{service_name=\"edge\", host_name=~\"$device\", mode=\"idle\"}[$__rate_interval])) * 100)",
          "legendFormat": "{{host_name}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "axisLabel": "bytes", "drawStyle": "line", "fillOpacity": 20, "lineWidth": 2, "spanNulls": true },
          "unit": "decbytes"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "options": { "legend": { "calcs": ["mean", "lastNotNull"], "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi", "sort": "desc" } },
      "title": "Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "node_memory_MemTotal_bytes{service_name=\"edge\", host_name=~\"$device\"} - node_memory_MemAvailable_bytes{service_name=\"edge\", host_name=~\"$device\"}",
          "legendFormat": "{{host_name}} used",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "node_memory_MemAvailable_bytes{service_name=\"edge\", host_name=~\"$device\"}",
          "legendFormat": "{{host_name}} available",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "node_memory_MemTotal_bytes{service_name=\"edge\", host_name=~\"$device\"}",
          "legendFormat": "{{host_name}} total",
          "refId": "C"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "axisLabel": "bytes/s", "drawStyle": "line", "fillOpacity": 20, "lineWidth": 2, "spanNulls": true },
          "unit": "Bps"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 3,
      "options": { "legend": { "calcs": ["mean", "lastNotNull"], "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi", "sort": "desc" } },
      "title": "Disk I/O",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "sum by (host_name) (rate(node_disk_read_bytes_total{service_name=\"edge\", host_name=~\"$device\"}[$__rate_interval]))",
          "legendFormat": "{{host_name}} read",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "sum by (host_name) (rate(node_disk_written_bytes_total{service_name=\"edge\", host_name=~\"$device\"}[$__rate_interval]))",
          "legendFormat": "{{host_name}} write",
          "refId": "B"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 20, "lineWidth": 2, "spanNulls": true },
          "unit": "Bps"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "id": 4,
      "options": { "legend": { "calcs": ["mean", "lastNotNull"], "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi", "sort": "desc" } },
      "title": "Network I/O",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "sum by (host_name) (rate(node_network_receive_bytes_total{service_name=\"edge\", host_name=~\"$device\"}[$__rate_interval]))",
          "legendFormat": "{{host_name}} rx",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "sum by (host_name) (rate(node_network_transmit_bytes_total{service_name=\"edge\", host_name=~\"$device\"}[$__rate_interval]))",
          "legendFormat": "{{host_name}} tx",
          "refId": "B"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 20, "lineWidth": 2, "spanNulls": true },
          "unit": "celsius"
        }
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "id": 5,
      "options": { "legend": { "calcs": ["mean", "lastNotNull"], "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi", "sort": "desc" } },
      "title": "Thermal",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "node_thermal_zone_temp{service_name=\"edge\", host_name=~\"$device\"}",
          "legendFormat": "{{host_name}} zone{{zone}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "fillOpacity": 20, "lineWidth": 2, "spanNulls": true },
          "unit": "decbytes"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "id": 6,
      "options": { "legend": { "calcs": ["mean", "lastNotNull"], "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi", "sort": "desc" } },
      "title": "Swap Usage",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "node_memory_SwapTotal_bytes{service_name=\"edge\", host_name=~\"$device\"} - node_memory_SwapFree_bytes{service_name=\"edge\", host_name=~\"$device\"}",
          "legendFormat": "{{host_name}} used",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "mimir" },
          "expr": "node_memory_SwapTotal_bytes{service_name=\"edge\", host_name=~\"$device\"}",
          "legendFormat": "{{host_name}} total",
          "refId": "B"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["edge", "metrics", "iot"],
  "templating": {
    "list": [
      {
        "datasource": { "type": "prometheus", "uid": "mimir" },
        "definition": "label_values(node_cpu_seconds_total{service_name=\"edge\"}, host_name)",
        "includeAll": true,
        "multi": true,
        "name": "device",
        "label": "Device",
        "query": "label_values(node_cpu_seconds_total{service_name=\"edge\"}, host_name)",
        "refresh": 2,
        "sort": 1,
        "type": "query"
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {},
  "timezone": "",
  "title": "Edge Device Metrics",
  "uid": "edge-device-metrics",
  "version": 1
}
