  ],
  "panels": [
    {
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "blue", "value": 1 }] } } },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "id": 1,
      "options": { "colorMode": "value", "graphMode": "none", "reduceOptions": { "calcs": ["count"], "values": false }, "textMode": "auto" },
      "title": "Active Devices",
      "type": "stat",
      "targets": [{ "datasource": { "type": "loki", "uid": "loki" }, "expr": "count(count by (host_name) (count_over_time({service_name=\"edge\"} [$__range])))", "instant": true, "refId": "A" }]
    },
    {
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": { "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 100 }] } } },
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "id": 2,
      "options": { "colorMode": "value", "graphMode": "area", "reduceOptions": { "calcs": ["sum"], "values": false }, "textMode": "auto" },
      "title": "Edge Error Count",
      "type": "stat",
      "targets": [{ "datasource": { "type": "loki", "uid": "loki" }, "expr": "sum(count_over_time({service_name=\"edge\", severity=~\"emerg|alert|crit|err\"} [$__range]))", "instant": true, "refId": "A" }]
    },
    {
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": { "defaults": { "color": { "mode": "palette-classic" }, "custom": { "axisLabel": "Log entries", "drawStyle": "bars", "fillOpacity": 80, "stacking": { "mode": "normal" } } } },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 0 },
      "id": 3,
      "options": { "legend": { "displayMode": "list", "placement": "right" }, "tooltip": { "mode": "multi", "sort": "desc" } },
      "title": "Severity Breakdown",
      "type": "timeseries",
      "targets": [{ "datasource": { "type": "loki", "uid": "loki" }, "expr": "sum by (severity) (count_over_time({service_name=\"edge\"} [$__auto]))", "legendFormat": "{{severity}}", "refId": "A" }]
    },
    {
      "datasource": { "type": "loki", "uid": "loki" },
