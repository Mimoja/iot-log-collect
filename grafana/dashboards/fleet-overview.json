      "targets": [{ "datasource": { "type": "loki", "uid": "loki" }, "expr": "sum by (host_name) (count_over_time({service_name=\"edge\", severity=~\"emerg|alert|crit|err\"} [$__auto]))", "legendFormat": "{{host_name}}", "refId": "A" }]
    },
    {
