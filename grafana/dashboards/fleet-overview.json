{
  "annotations": { "list": [] },
  "description": "Fleet overview: all edge devices, errors, and top offenders",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    { "icon": "dashboard", "includeVars": true, "keepTime": true, "title": "Edge Device Logs", "type": "link", "url": "/d/edge-device-logs/edge-device-logs" },
